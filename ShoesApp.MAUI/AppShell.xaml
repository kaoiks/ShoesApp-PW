<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShoesApp.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShoesApp.MAUI"
    Shell.FlyoutBehavior="Disabled"
    Title="ShoesApp.MAUI">

    <FlyoutItem>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" /> 
    <ShellContent
        Title="Footwear Catalog"
        ContentTemplate="{DataTemplate local:FootwearsPage}"
        Route="FootwearsPage" />

    </FlyoutItem>
</Shell>
