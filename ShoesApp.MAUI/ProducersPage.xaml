<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="INF148151_148140.ShoesApp.MAUI.ProducersPage"
             xmlns:viewmodel="clr-namespace:INF148151_148140.ShoesApp.MAUI.ViewModels"
             x:Name="ProducerContentPageName"
             Title="ProducersPage">
    <VerticalStackLayout>
        <ListView ItemsSource="{Binding Producers}" ItemTapped="ListView_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Border Stroke="Gray" StrokeThickness="1" Padding="7">
                            <HorizontalStackLayout  x:DataType="viewmodel:ProducerViewModel" Spacing="10" >
                                <Label Text="{Binding Id}"
                                   WidthRequest="60"
                                   VerticalOptions="Center" 
                                   HorizontalOptions="Center" />
                                <Label Text="{Binding Name}" FontAttributes="Bold"
                                   VerticalOptions="Center" HorizontalOptions="Center" FontSize="18" />
                                <Label Text="{Binding Country}" FontAttributes="Bold"
                                    VerticalOptions="Center" HorizontalOptions="Center" FontSize="18" />
                            </HorizontalStackLayout>
                        </Border>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </VerticalStackLayout>
</ContentPage>